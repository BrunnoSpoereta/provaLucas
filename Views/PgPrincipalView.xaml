<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProvaLuquinha.Views.PgPrincipalView"
             xmlns:viewmodel="clr-namespace:ProvaLuquinha.ViewModels"
             Title="Página Principal">


    <ContentPage.BindingContext>
        <viewmodel:UsuarioViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

            <Label Text="Bem-vindo!"
               FontSize="32"
               HorizontalTextAlignment="Center"
               FontAttributes="Bold"/>


            <Label Text="{Binding Nome, StringFormat='Olá, {0}!'}"      
               FontSize="20"
               HorizontalTextAlignment="Center"
               />


            <StackLayout Spacing="15" Margin="0,30,0,0">

                <Button Text="Atualizar Dados"
                    Command="{Binding AtualizarCommand}"
                    
                    TextColor="White"
                    FontSize="16"/>
                
                <Button Text="Visualizar Dados"
                    Command="{Binding ConsultarCommand}"
                    
                    TextColor="White"
                    FontSize="16"/>
            </StackLayout>
            

            
            <StackLayout IsVisible="{Binding DadosVisiveis}" 
                     Spacing="10" 
                     Margin="0,20,0,0"
                     
                     Padding="15">

                <Label Text="Seus Dados:"
                   FontSize="18"
                   FontAttributes="Bold"
                   />

                <Label Text="{Binding Nome, StringFormat='Nome: {0}'}"
                   FontSize="16"/>

                <Label Text="{Binding CPF, StringFormat='CPF: {0}'}"
                   FontSize="16"/>

                <Label Text="{Binding Email, StringFormat='Email: {0}'}"
                   FontSize="16"/>

                <Label Text="{Binding DataNasc, StringFormat='Data de Nascimento: {0}'}"
                   FontSize="16"/>

            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>