<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProvaLuquinha.Views.UsuarioCadastroView"
             xmlns:viewmodel="clr-namespace:ProvaLuquinha.ViewModels"
             Title="UsuarioCadastroView">

    <ContentPage.BindingContext>
        <viewmodel:UsuarioViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Padding="15">
            <Label Text="Cadastro de Usuario" FontSize="30" HorizontalTextAlignment="Center"/>

            <StackLayout Padding="10"/>
            <Label Text="Nome"/>
            <Entry Text="{Binding Nome}"/>

            <StackLayout Padding="10"/>
            <Label Text="CPF"/>
            <Entry Text="{Binding CPF}"/>

            <StackLayout Padding="10"/>
            <Label Text="Email"/>
            <Entry Text="{Binding Email}"/>

            <StackLayout Padding="10"/>
            <Label Text="Senha"/>
            <Entry Text="{Binding Senha}"/>

            <StackLayout Padding="10"/>
            <Label Text="Data de Nascimento"/>
            <Entry Text="{Binding DataNasc}"/>
            
            <StackLayout Padding="10"/>
            <Button Text="Cadastrar"
                Command="{Binding CadastrarCommand}"/>

        </StackLayout>
    </ScrollView>
</ContentPage>